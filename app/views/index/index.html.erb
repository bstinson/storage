<div id="divide"></div>

<div id="content">
	
	<% if flash[:notice].nil? %>
		<% else %>
	<div id="helper">
		<%= textilize(flash[:notice])%>
	</div>
	<% end %>
		
	<div id="shed_status">
		<h3>Buildings</h3>
		<% if @buildings.size == 0 %>
		<p> You have no buildings for your company. Click <%= link_to "here", :controller => "buildings" %> to add them.</p>
		<% else %>
			<%= collection_select :form, :id, @buildings, :id, :name,
			                      {},
			                      {:onChange => remote_function(:update => "unit_status", :url => { :action => :update_building },
																						  :with => "'building_id=' + value") } %>
		<% end %>

		<div id="unit_status">
			<div style="width:350px;background-color:#ccc;padding:10px;">
				
				<% %>
				<table>
					<caption><b>Daily Stats</b></caption>
					<tr>
						<td>Total Units:</td>
						<td></td>
					</tr>
					<tr>
						<td>Vacancies:</td>
						<td></td>
					</tr>
					<tr>
						<td> Occupied Units:</td>
						<td></td>
					</tr>
					<tr>
						<td> Needing Cleaning:</td>
						<td></td>
					</tr>
					<tr>
						<td> Damaged:</td>
						<td></td>
					</tr>
					<tr>
						<td> Locked Out:</td>
						<td></td>
					</tr>
			</div>
		</div>	
	</div>
	
</div>
