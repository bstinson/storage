<div id="divide">

</div>

<div id="content">
	<% if flash[:notice].nil? %>
	<% else %>	
		<div id="helper">
			<%=	textilize(flash[:notice]) %>
		</div>	
	<% end %>
	
	<div id="info">
		<h3>Unit #<%= @unit.unit_num %></h3>
			
			<% if @unit.status == 'Vacant'%>
				<p>This unit is vacant. If you want to add a customer to this unit, click <%= link_to "here!", :action => "add_customer", :id => @unit.id %></p>
			<% else %>
				<%= render :partial => "customer_info" %>
			<% end %>
			
			<% if @unit.status = 'Vacant' %>
			<% else %>
				<%= render :partial => "notes" %>
			<% end %>
	</div>	
</div>	